{
  "name": "tumssum-frontend",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "mvpublic": "cp -rf public/*/* dist/",
    "prestart": "mkdir -p dist && npm run mvpublic",
    "start": "parcel src/index.html --port 3000",
    "prebuild": "rm -rf build",
    "build": "parcel build src/index.html src/index.tsx --out-dir build --no-content-hash --no-source-maps --detailed-report",
    "postbuild": "mkdir -p build && cp -rf public/*/* build/ && mv build/favicon.*.ico build/favicon.ico",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@types/wouter": "^2.2.0",
    "axios": "^0.21.1",
    "i18next": "^20.3.1",
    "i18next-xhr-backend": "^3.2.2",
    "package.json": "^2.0.1",
    "preact": "*",
    "preact-i18next": "^11.8.5",
    "preact-render-to-string": "*",
    "preact-router": "^3.2.1",
    "react-redux": "^7.2.4",
    "types": "^0.1.1",
    "wouter": "^2.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/preact": "^6.2.9",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-loader": "^8.2.2",
    "core-js": "^3.13.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "less-loader": "^7.3.0",
    "node-sass": "^6.0.0",
    "preact-cli": "^3.3.3",
    "sass": "^1.34.0",
    "sass-loader": "^10.2.0",
    "sass-resources-loader": "^2.2.1",
    "sirv-cli": "^1.0.0-next.3",
    "stylus-loader": "^4.3.3",
    "typescript": "^4.5.4"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat",
    "local-module": "./custom/modules"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  },
  "browserslist": [
    "> 0.25%",
    "IE >= 9"
  ]
}
