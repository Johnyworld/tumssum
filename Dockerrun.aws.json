{
	"AWSEBDockerrunVersion": 2,
	"volumes": [
    {
      "name": "server",
      "host": {
        "sourcePath": "/usr/src/app"
      }
    }
  ],
	"containerDefinitions": [
		{
			"name": "server",
			"image": "johnyworld/ts-server",
			"hostname": "server",
			"essential": false,
			"memory": 128
		},
		{
			"name": "nginx",
			"image": "johnyworld/ts-nginx",
			"hostname": "nginx",
			"essential": true,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 80
				}
			],
			"links": ["server"],
			"mountPoints": [
        {
          "sourceVolume": "server",
          "containerPath": "server",
          "readOnly": true
        }
			],
			"memory": 128
		}
	]
}